<body style="background-color: #e3f2fd;">
    <!-- ----------------------------------------NavBar ------------------------------------------------------>
    <%- include ('navbar.ejs') %>
    <div id="progressMsg" class="progressMsgBar">
      <h4 id="msgHead"></h4>
    </div>
    <!-- method="post" action="http://127.0.0.1:5000/api/user/register"  -->
    <div class="pk_form_container">
      <div class="pk_form shadow-lg p-3 mb-5 bg-body rounded">
          <form id="signupForm">
              <div class="mb-2">
                <label for="inputName1" >Name</label>
                <input name="name" type="text" class="form-control" id="inputName1" required>
              </div>
              <div class="mb-2">
                <label for="inputUsername1" >Username</label>
                <input name="username" type="text" class="form-control" pattern="[A-Za-z0-9]+" id="inputUsername1" required>
              </div>
              <div class="mb-2">
                <label for="exampleInputEmail1" >Email address</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
              </div>
              <div class="mb-2">
                <label  class="form-label" >Mobile Number</label>
                <input name="mobile" type="tel" class="form-control" pattern="[0-9]{10}" id="mobileNumber" required>
              </div>
              <div class="mb-2">
                  <label for="exampleInputPassword1" >Password</label>
                  <input name="password" type="password" class="form-control" id="exampleInputPassword1" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required >
                  <span>Atleast 1 UpperCase,1 Lowercase and 1 number</span>
              </div>
              <div class="mb-2">
                  <label for="exampleInputPassword1"">Confirm Password</label>
                  <input name="confirmPassword" type="password" class="form-control" id="exampleInputPassword2" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required >
              </div>
              <div class="mb-2 form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                  <label class="form-check-label" for="exampleCheck1">Accept Terms and Condition
                    
                  </label>
              </div>
              <div class="pk_btn_dis">
                  <input type="submit" class="btn btn-primary" placeholder="Login">
              </div>
          </form>
      </div>
  </div>
  <%- include ('footer.ejs') %>

</body>
